{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["vitest/globals", "jsdom"],
    "baseUrl": "../../",
    "paths": {
      "@/src/*": ["src/*"],
      "@/test/*": ["test/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.test.ts",
    "**/*.test.js",
    "../../src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 